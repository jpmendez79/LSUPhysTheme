% \beamerdefaultoverlayspecification{}

% Redefine \titlepage to draw a colored background only during the title slide
\renewcommand{\titlepage}{%
  \usebackgroundtemplate{%
    \tikz[remember picture, overlay]
      \fill[lsupurple] (current page.south west) rectangle (current page.north east);
  }%

  \begin{frame}
    \begin{beamercolorbox}{titlepage}
    \hfill\logotitle\par% \logotitle is defined in outertheme
    \vskip 75pt
    \centering
    {\Huge{\bf \inserttitle}}
    \vskip 3pt
    \ifx\insertsubtitle\@empty%
    \else%
      \large{\bf \insertsubtitle}\vskip 25pt%
    \fi%
    {\small\insertauthor}\vskip 2pt%
    \ifx\insertinstitute\vskip 2pt%
    \else%
      {\small\insertinstitute}\vskip 2pt%
    \fi%
    \ifx\insertdate\@empty%
    \else%
      {\small\insertdate}%
    \fi%
  \end{beamercolorbox}

    \end{frame}
    \usebackgroundtemplate{} % Reset background for subsequent slides

 }

\mode<all>
