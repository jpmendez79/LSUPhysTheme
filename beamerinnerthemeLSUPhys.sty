\pgfdeclareverticalshading[lower.bg,upper.bg]{bmb@transition}{200cm}{%
color(0pt)=(lower.bg); color(2pt)=(lower.bg); color(4pt)=(lower.bg)}

\setbeamersize{text margin left=2em,text margin right=2em}

\defbeamertemplate{footline}{author and page number}{%
  \usebeamercolor[fg]{page number in head/foot}%
  \usebeamerfont{page number in head/foot}%
  \hspace{1em}\insertshortauthor\hfill%
  \insertshortdate\hfill%
  \usebeamercolor[fg]{page number in head/foot}%
  \insertpagenumber\,/\,\insertpresentationendpage\kern1em\vskip3pt%
}

\setbeamertemplate{footline}[author and page number]{}
% \setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{blocks}[rounded][shadow=false]

\setbeamertemplate{enumerate items}[default]
\setbeamertemplate{enumerate subitem}[default]
\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{itemize subitem}[circle]

% table of contents (overview) settings
\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}{%
    \leavevmode
    \leftskip=3.2em
    \rlap{\hskip-2em\inserttocsectionnumber.\inserttocsubsectionnumber}
    \inserttocsubsection\par
}

% frame title customization
\setbeamertemplate{frametitle}{%
    \vspace*{0.5em}
    \bfseries\insertframetitle\par
    \vskip-6pt
    \hrulefill\vspace{-0.1em}
}


% Standout / closing slide
\newcommand{\standoutframe}[1]{%
  {

    \usebackgroundtemplate{%
    \tikz[remember picture, overlay]
      \fill[lsupurple]
        (current page.south west)
        rectangle
        (current page.north east);
  }%

    \setbeamertemplate{navigation symbols}{}
    \setbeamertemplate{footline}{}
    \begin{frame}[plain]
      \begin{beamercolorbox}{titlepage}
      \vfill
      \begin{center}
        {\Huge{\bf #1}}
      \end{center}
      \vfill
    \end{beamercolorbox}
    \end{frame}
  }
}

